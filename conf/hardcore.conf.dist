########################################
# Hardcore Module Configuration
########################################

[worldserver]

###################################################################################################
# HARDCORE MODULE
#
#    Hardcore.Enable
#        Описание: Включить режим Хардкор
#        Значения: 0 - отключено
#                  1 - включено (по умолчанию)
#
#    Hardcore.AuraSpellId  
#        Описание: ID заклинания для красной ауры хардкор-игроков
#        Рекомендуемые значения:
#            36573 - Vision (красно-оранжевое свечение) - рекомендуется
#            57940 - Camo (красноватый эффект)
#            23493 - Emberseer (красная аура)
#            32474 - Красный огненный эффект
#        По умолчанию: 36573

Hardcore.Enable = 1
Hardcore.AuraSpellId = 36573

#    Hardcore.TitleRewards
#        Описание: Награды титулами при достижении определённых уровней
#        Формат: "уровень ID_титула, уровень ID_титула"
#        ID из CharTitles.dbc
#        Пример: "60 143, 70 123, 80 145"
#        По умолчанию: "" (нет наград)

Hardcore.TitleRewards = ""

#    Hardcore.XPMultiplier
#        Описание: Множитель опыта для хардкор-игроков
#        Значение: 1.0 = нормальный опыт, 1.5 = +50% опыта, 0.5 = -50% опыта
#        По умолчанию: 1

Hardcore.XPMultiplier = 1

#    Hardcore.TalentRewards
#        Описание: Дополнительные очки талантов при достижении уровней
#        Формат: "уровень количество, уровень количество"
#        Пример: "30 1, 40 1, 50 1, 60 2, 70 2, 80 5"
#        По умолчанию: "" (нет наград)

Hardcore.TalentRewards = ""

#    Hardcore.ItemRewards
#        Описание: Награды предметами при достижении уровней
#        Формат: "уровень ID_предмета, уровень ID_предмета"
#        Пример: "80 54811"
#        По умолчанию: "" (нет наград)

Hardcore.ItemRewards = ""

#    Hardcore.ItemRewardAmount
#        Описание: Количество выдаваемых предметов из ItemRewards
#        По умолчанию: 1

Hardcore.ItemRewardAmount = 1

#    Hardcore.DisableLevel
#        Описание: Уровень, на котором режим хардкор ПОЛНОСТЬЮ ОТКЛЮЧАЕТСЯ
#        При достижении этого уровня:
#          - Красная аура исчезает
#          - Режим деактивируется
#          - Смерть больше не окончательна
#          - Все бонусы прекращаются
#        0 = никогда не отключать (хардкор на все уровни)
#        Рекомендуемые значения: 60, 70, 80
#        ПРИМЕР: Hardcore.DisableLevel = 60 → режим отключится на 60 уровне
#        По умолчанию: 0

Hardcore.DisableLevel = 0

#    Hardcore.MaxDeathLevel
#        Описание: Максимальный уровень, до которого работает ОКОНЧАТЕЛЬНАЯ СМЕРТЬ
#        После достижения этого уровня:
#          - Режим остаётся активным
#          - Красная аура остаётся
#          - Бонусы продолжают работать
#          - НО смерть больше не окончательна (можно воскрешаться)
#        0 = окончательная смерть работает всегда (до DisableLevel или навсегда)
#        Рекомендуемые значения: 60, 70
#        ПРИМЕР: Hardcore.MaxDeathLevel = 60 → после 60 можно воскрешаться, но бонусы остаются
#        По умолчанию: 0 (окончательная смерть всегда)

Hardcore.MaxDeathLevel = 0

#
#    ПРИМЕРЫ НАСТРОЙКИ:
#
#    1) Классический хардкор (до конца):
#       Hardcore.DisableLevel = 0
#       Hardcore.MaxDeathLevel = 0
#
#    2) Хардкор только до 60 уровня (потом режим полностью отключается):
#       Hardcore.DisableLevel = 60
#       Hardcore.MaxDeathLevel = 0
#
#    3) Жесткий хардкор до 60, потом мягкий режим с бонусами до 80:
#       Hardcore.DisableLevel = 80
#       Hardcore.MaxDeathLevel = 60
#
#    4) Окончательная смерть только на левелинге (до 70), потом режим отключается:
#       Hardcore.DisableLevel = 70
#       Hardcore.MaxDeathLevel = 0
#

#    Hardcore.AchievementReward
#        Описание: Награды достижениями при достижении уровней
#        Формат: "уровень ID_достижения, уровень ID_достижения"
#        Пример: "80 1234"
#        По умолчанию: "" (нет наград)

Hardcore.AchievementReward = ""

###################################################################################################
# ОГРАНИЧЕНИЯ И ОСЛАБЛЕНИЯ РЕЖИМА "БЕЗ ПРАВА НА ОШИБКУ"
###################################################################################################

#    Hardcore.DamageDealtModifier
#        Описание: Множитель наносимого урона хардкор-игроками
#        1.0 = нормальный урон, 0.9 = -10% урона, 0.8 = -20% урона
#        По умолчанию: 0.9 (-10% урона)

Hardcore.DamageDealtModifier = 0.9

#    Hardcore.DamageTakenModifier
#        Описание: Множитель получаемого урона хардкор-игроками
#        1.0 = нормальный урон, 1.5 = +50% урона, 2.0 = +100% урона
#        По умолчанию: 1.5 (+50% урона)

Hardcore.DamageTakenModifier = 1.5

#    Hardcore.MinDeathAnnounceLevel
#        Описание: Минимальный уровень для глобального анонса смерти
#        Анонсы будут только для персонажей этого уровня и выше
#        По умолчанию: 20

Hardcore.MinDeathAnnounceLevel = 20

#    Hardcore.MaxLevelDifference
#        Описание: Максимальная разница уровней для группы хардкор-игроков
#        Пример: 5 = можно группироваться только с игроками ±5 уровней
#        По умолчанию: 5

Hardcore.MaxLevelDifference = 5

#    Hardcore.DungeonCooldown
#        Описание: Кулдаун подземелий в часах (суточное восстановление)
#        24 = можно проходить подземелье раз в сутки
#        По умолчанию: 24

Hardcore.DungeonCooldown = 24

#    Hardcore.BlockDeathKnight
#        Описание: Запретить рыцарям смерти участвовать в режиме
#        По умолчанию: 1 (запрещено)

Hardcore.BlockDeathKnight = 1

#    Hardcore.BlockAuction
#        Описание: Блокировать доступ к аукциону
#        По умолчанию: 1 (заблокировано)

Hardcore.BlockAuction = 1

#    Hardcore.BlockMail
#        Описание: Блокировать доступ к почте
#        По умолчанию: 1 (заблокировано)

Hardcore.BlockMail = 1

#    Hardcore.BlockGuildBank
#        Описание: Блокировать доступ к гильдейскому банку
#        По умолчанию: 1 (заблокировано)

Hardcore.BlockGuildBank = 1

#    Hardcore.BlockBattleground
#        Описание: Блокировать регистрацию на поля боя
#        По умолчанию: 1 (заблокировано)

Hardcore.BlockBattleground = 1

#    Hardcore.BlockArena
#        Описание: Блокировать регистрацию на арену
#        По умолчанию: 1 (заблокировано)

Hardcore.BlockArena = 1

#    Hardcore.ForcePvE
#        Описание: Принудительный PvE режим (кроме FFA зон)
#        По умолчанию: 1 (включено)

Hardcore.ForcePvE = 1

###################################################################################################
